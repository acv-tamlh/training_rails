<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>

<%=link_to 'New', new_product_path%>

<table>
  <tr>
    <th>Product Title</th>
    <th>Category</th>
    <th>Price</th>
    <th>Published</th>
    <th>Readmore</th>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.category.try(:title) %></td>
    <td><%= product.price %></td>
    <td><%= product.published %></td>
    <td><%= link_to 'Readmore', product_path(product) %></td>
  </tr>
  <%end%>
</table>
