<h1>Products#show</h1>
<p>Find me in app/views/products/show.html.erb</p>

<table>
  <tr>
    <th>Product Title</th>
    <th>Category</th>
    <th>Price</th>
    <th>Country</th>
    <th>Level</th>
    <th>Published</th>
  </tr>
  <tr>
    <td><%= @product.title %></td>
    <td><%= @product.category.try(:title) %></td>
    <td><%= @product.price %></td>
    <td><%= @product.try(:country) %></td>
    <td><%= @product.try(:level) %></td>
    <td><%= @product.published %></td>
    <td><%= link_to 'edit', edit_product_path %></td>
  </tr>
</table>
